<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers" />

        <variable
            name="adapter"
            type="me.tatarka.bindingcollectionadapter2.BindingRecyclerViewAdapter" />

        <variable
            name="viewModel"
            type="com.fengz.personal.fourweeks.business1.ui.viewmodel.DetailsViewModel" />

        <variable
            name="toolbarViewmodel"
            type="com.fengz.personal.fourweeks.business1.ui.viewmodel.ToolbarViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/toolbar_actionbar"
            binding:toolbarViewmodel="@{toolbarViewmodel}" />

        <com.fengz.personal.fourweeks.common.MultipleRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_bg_f9f9f9"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_8">

            <!--任务基本信息-->
            <LinearLayout
                android:id="@+id/ll_base_details_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radius_white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8">

                <TextView
                    android:id="@+id/tv_title_details_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:text="@{viewModel.taskBean.title}"
                    android:textColor="@color/c_333333_text"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="任务标题" />

                <!--任务时间-->
                <TextView
                    android:id="@+id/tv_duration_details_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:textColor="@color/c_333333_text"
                    android:textSize="@dimen/sp_10"
                    bind:endDate="@{viewModel.taskBean.endData}"
                    bind:startDate="@{viewModel.taskBean.createdData}"
                    tools:text="2019.12.12 - 2012.1.1" />

                <TextView
                    android:id="@+id/tv_content_details_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="@{viewModel.taskBean.content}"
                    android:textColor="@color/c_999_text"
                    android:textSize="@dimen/sp_12"
                    tools:text="斯顿发送到发送到发发撒的发的发送到发送到" />
            </LinearLayout>

            <!--任务状态 奖惩信息-->
            <LinearLayout
                android:id="@+id/ll_status_details_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_base_details_act"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@drawable/bg_radius_white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务状态"
                    android:textColor="@color/c_333333_text"
                    android:textSize="@dimen/sp_12" />

                <!--任务完成度-->
                <TextView
                    android:id="@+id/tv_degree_details_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:textColor="@color/c_333333_text"
                    android:textSize="@dimen/sp_12"
                    bind:degree="@{viewModel.taskBean.taskPersents}"
                    bind:desired="@{viewModel.taskBean.desiredPersents}"
                    tools:text="完成度：20/100" />

                <TextView
                    android:id="@+id/tv_award_details_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text='@{"完成奖励：" + viewModel.taskBean.award}'
                    android:textColor="@color/c_999_text"
                    android:textSize="@dimen/sp_10"
                    bind:visibleOrGone="@{!TextUtils.isEmpty(viewModel.taskBean.award)}"
                    tools:text="完成奖励：xxx"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tv_punishment_details_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text='@{"失败惩罚：" + viewModel.taskBean.punishment}'
                    android:textColor="@color/c_999_text"
                    android:textSize="@dimen/sp_10"
                    bind:visibleOrGone="@{!TextUtils.isEmpty(viewModel.taskBean.punishment)}"
                    tools:text="失败惩罚：xxx"
                    tools:visibility="visible" />
            </LinearLayout>

            <!--任务信息记录-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_details_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_status_details_act"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/white"
                android:overScrollMode="never"
                android:scrollbars="none"
                binding:adapter="@{adapter}"
                binding:itemBinding="@{viewModel.itemBinding}"
                binding:items="@{viewModel.observableList}"
                binding:layoutManager="@{LayoutManagers.grid(7)}" />

            <LinearLayout
                android:id="@+id/ll_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_details_act"
                android:background="@color/white"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/dic_unactivit"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:text="未开始/失败"
                    android:textColor="@color/c_999_text"
                    android:textSize="@dimen/sp_9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:drawableLeft="@drawable/dic_finish"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:text="完成任务"
                    android:textColor="@color/c_999_text"
                    android:textSize="@dimen/sp_9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:drawableLeft="@drawable/dic_activiting"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:text="当日任务"
                    android:textColor="@color/c_999_text"
                    android:textSize="@dimen/sp_9" />
            </LinearLayout>

        </com.fengz.personal.fourweeks.common.MultipleRelativeLayout>
    </LinearLayout>
</layout>